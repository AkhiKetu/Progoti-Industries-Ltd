<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="progotiindustriesltd.progotiindustriesltd.ConfirmCreditStatusViewController">
    <!-- Header Section -->
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Confirm Credit Status" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="10" />

    <!-- Customer Selection Section -->
    <HBox spacing="10" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="50">
        <Label text="Select Customer:" />
        <ComboBox promptText="Choose Customer" />
        <Button text="Load Customer Credit Details" />
    </HBox>

    <!-- Display Credit Details Section -->
    <VBox spacing="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="100">
        <Label style="-fx-font-weight: bold;" text="Credit Details:" />
        <TextArea editable="false" prefHeight="98.0" prefWidth="745.0" promptText="Customer's credit details will appear here..." wrapText="true" />
    </VBox>

    <!-- Verify Credit Status Section -->
    <HBox spacing="10" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="250">
        <Label text="Verify Credit Status:" />
        <Button text="Check Credit Score" />
        <Button text="Validate Credit Limit" />
    </HBox>

    <!-- Notify Sales Representative Section -->
    <HBox spacing="10" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="300">
        <Label text="Notify Sales Representative:" />
        <TextArea prefHeight="95.0" prefWidth="479.0" promptText="Enter additional notes for the sales team..." wrapText="true" />
        <Button text="Send Notification" />
    </HBox>

    <!-- Confirm and Proceed Section -->
    <HBox layoutX="10.0" layoutY="413.0" spacing="10" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="413.0">
        <Button text="Approve Sale" />
        <Button text="Reject Sale" />
        <Button text="Request Additional Information" />
    </HBox>

    <!-- Status Section (at the bottom) -->
    <Label style="-fx-text-fill: green;" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="450" />

</AnchorPane>
